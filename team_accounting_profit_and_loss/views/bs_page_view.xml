<odoo>
    <data>
        <template id="balance_sheet_template" inherit_id="web.layout">
            <t t-call="web.html_container">
                <div class="oe_structure">
                    <iframe src="/balance_sheet_data" style="border: 0; width: 100%; height: 600px;"></iframe>
                </div>
            </t>
        </template>

        <record id="action_balance_sheet" model="ir.actions.act_url">
            <field name="name">Balance Sheet</field>
            <field name="type">ir.actions.act_url</field>
            <field name="url">/web#action=balance_sheet_template</field>
        </record>


    </data>
</odoo>
