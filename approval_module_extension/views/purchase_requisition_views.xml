<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_request_extension_view_form_inherit" model="ir.ui.view">
            <field name="name">purchase_request_extension_view_form_inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="after">

                    <field name="department_id" attrs="{'invisible': [('state', '!=', 'draft'), ('state', '!=', 'open'),('state', '!=', 'approved'), ('state', '!=', 'done')], 'readonly': [('state', 'not in', ('draft', 'in_progress', 'to_approve'))]}"/>
                                        <field name="approver_id" string="First Approver" attrs="{'invisible': [('state', '!=', 'draft'), ('state', '!=', 'to_approve'),('state', '!=', 'approved'), ('state', '!=', 'open'), ('state', '!=', 'done')], 'readonly': [('state', 'not in', ('draft','in_progress'))]}"/>
                    <field name="job_title_4" invisible="1"/>

                    <field name="second_approver_id" string="Second Approver" attrs="{'invisible': [('state', '!=', 'draft'), ('state', '!=', 'to_approve'),('state', '!=', 'approved'), ('state', '!=', 'open'), ('state', '!=', 'done')], 'readonly': [('state', 'not in', ('draft','in_progress'))]}"/>
                    <field name="job_title_2" invisible="1"/>

                    <field name="third_approver_id" string="Third Approver" attrs="{'invisible': [('state', '!=', 'draft'), ('state', '!=', 'to_approve'),('state', '!=', 'approved'), ('state', '!=', 'open'), ('state', '!=', 'done')], 'readonly': [('state', 'not in', ('draft','in_progress'))]}"/>
                    <field name="job_title_3" invisible="1"/>


                    <field name="fourth_approver_id" string="Fourth Approver" attrs="{'invisible': [('state', '!=', 'draft'), ('state', '!=', 'to_approve'),('state', '!=', 'approved'), ('state', '!=', 'open'), ('state', '!=', 'done')], 'readonly': [('state', 'not in', ('draft','in_progress'))]}"/>
                    <field name="job_title_1" invisible="1"/>

                    <field name="fifth_approver_id" string="Fifth Approver" attrs="{'invisible': [('state', '!=', 'draft'), ('state', '!=', 'to_approve'),('state', '!=', 'approved'), ('state', '!=', 'open'), ('state', '!=', 'done')], 'readonly': [('state', 'not in', ('draft','in_progress'))]}"/>
                    <field name="job_title_5" invisible="1"/>

                </xpath>
            </field>
        </record>

    </data>
</odoo>